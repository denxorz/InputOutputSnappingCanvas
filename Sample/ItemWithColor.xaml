<UserControl
    x:Class="Sample.ItemWithColor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:denxorz="clr-namespace:Denxorz.InputOutputSnappingCanvas;assembly=Denxorz.InputOutputSnappingCanvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d" x:Name="thisControl">
    
    <Grid>
        <denxorz:OutputControl
            x:Name="outControl"
            Width="20"
            Margin="0,-5,-20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />

        <Rectangle
            Width="70"
            Height="70"
            Fill="{Binding DataContext.Color}" />
    </Grid>
</UserControl>
