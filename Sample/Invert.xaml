<UserControl
    x:Class="Sample.Invert"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:denxorz="clr-namespace:Denxorz.InputOutputSnappingCanvas;assembly=Denxorz.InputOutputSnappingCanvas"
    xmlns:local="clr-namespace:Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="120"
    Height="80"
    d:DataContext="{d:DesignInstance local:InvertViewModel,
                                     IsDesignTimeCreatable=True}"
    Background="#0C000000"
    mc:Ignorable="d">

    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <denxorz:InputControl
                x:Name="inControl"
                Width="20"
                Height="20"
                Margin="-20,-5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <denxorz:OutputControl
                x:Name="outControl"
                Width="20"
                Margin="0,-5,-20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" />

            <Label
                Width="100"
                Margin="10,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Color inverter" />

        </Grid>
    </Border>
</UserControl>
